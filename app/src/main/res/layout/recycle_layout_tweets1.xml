<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#EEEBFA"
    android:paddingBottom="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="#FFFFFF">

        <TextView
            android:id="@+id/tweetRecycle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Tweet"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/userRecycle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="User"
            app:layout_constraintStart_toStartOf="@+id/tweetRecycle"
            app:layout_constraintTop_toBottomOf="@+id/tweetRecycle" />

        <ImageView
            android:id="@+id/garbage"
            android:layout_width="34dp"
            android:layout_height="38dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/dateRecycle"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/rubbish_bin" />

        <TextView
            android:id="@+id/dateRecycle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Date"
            app:layout_constraintTop_toBottomOf="@+id/userRecycle" />

        <ImageView
            android:id="@+id/heart"
            android:layout_width="42dp"
            android:layout_height="38dp"
            android:layout_marginRight="56dp"
            app:layout_constraintBottom_toBottomOf="@+id/garbage"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/garbage"
            app:srcCompat="@drawable/like_not_favorite" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>